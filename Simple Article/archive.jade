extends base.jade
block title
	title= "文章归档 - "+site.title
block seo
	+h.seo()
block content
    .container
	  .posts
        recent_posts = posts.recent_999
        .archive-count
          |目前共计
		  span= recent_posts.length
          |篇日志
        entries = recent_posts.group('-date:year')
        .archive-list
          for year, posts in entries
            h2.archive-year= year
            ul
              for post in posts
                li
                  time.post-time(datetime=post.date,title=post.date)=post.date.format("%m-%d")
                  a(href=post.url):span=post.title
	  .sidebar
        from mixins import make_siteinfo
        +make_siteinfo()		
        from mixins import make_cat
        +make_cat()		
        from mixins import make_ad
        +make_ad()