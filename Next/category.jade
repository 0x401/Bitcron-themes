extends base
category_title =posts.category.metadata.title or posts.category.title
category_description =posts.category.metadata.description or site.configs.description
block title
	title= '分类：'+category_title+" - "+site.title
block seo
	+h.seo(category_title,category_description)
block content
	#content.content:#posts.posts-collapse
		.collection-title:h2
			|{{category_title}}
			small 分类
		for post in posts:article.post.post-type-normal
			header.post-header
				h1.post-title:a.post-title-link(href=post.url):span=post.title
				.post-meta:time.post-time(datetime=post.date,title=post.date)=post.date.format("%m-%d")
	include include/pagination.jade

