extends base
block title
	title= "文章归档 - "+site.title
block seo
	+h.seo()
block content
	recent_posts = posts.recent_999
	#content.content:section#posts.posts-collapse
		span.archive-move-on
		span.archive-page-counter= "非常好! 目前共计 "+recent_posts.length+" 篇日志。"
		entries = recent_posts.group('-date:year')
		for year, posts in entries
			.collection-title:h2.archive-year.motion-element=year
			for post in posts:article.post.post-type-normal
				header.post-header
					h1.post-title:a.post-title-link(href=post.url):span=post.title
					.post-meta:time.post-time(datetime=post.date,title=post.date)=post.date.format("%m-%d")